<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.vt.cuba.web.mqtt.MqttBrowse"
        focusComponent="mqttsTable"
        lookupComponent="mqttsTable"
        messagesPack="com.vt.cuba.web.mqtt">
    <dsContext>
        <groupDatasource id="mqttsDs"
                         class="com.vt.cuba.entity.Mqtt"
                         view="mqtt-view">
            <query>
                <![CDATA[select e from cuba$Mqtt e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="mqttsTable"
            spacing="true">
        <filter id="filter"
                applyTo="mqttsTable"
                datasource="mqttsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="mqttsTable"
                    width="100%">
            <actions>
                <action id="create"
                        openType="DIALOG"/>
                <action id="edit"
                        openType="DIALOG"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="createTs"/>
                <column id="topic"/>
                <column id="message"/>
            </columns>
            <rows datasource="mqttsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="mqttsTable.create"/>
                <button id="editBtn"
                        action="mqttsTable.edit"/>
                <button id="removeBtn"
                        action="mqttsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
